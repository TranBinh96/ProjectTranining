@model Category
<h1>Update Category</h1>
@* <span asp-validation-summary="All"></span> *@
<div asp-validation-summary="ModelOnly" val class="text-danger"></div>

<form method="post" action="@Url.Action("EditCategory", "Categories")">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name Category</label>
        <input asp-for="Name" type="text" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="form-label">Display Order</label>
        <input asp-for="DisplayOrder" type="text" class="form-control">
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-3">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        <div class="col-3">
            <a asp-action="Index" type="button" class="btn btn-dark">Back To List</a>
        </div>
    </div>
</form>