@model Category
@* <span asp-validation-summary="All"></span> *@
<div asp-validation-summary="ModelOnly" val class="text-danger"></div>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-3 py-3">
        <div class="row">
            <col-12 class="text-center">
                <h2 class="text-white py-3">Create Category</h2>
            </col-12>
        </div>
    </div> 
    <div class="card-body p-1">
        <form method="post" class="row">
            <div class="border p-3">
                 <div class="mb-3 row p-1">
                    <label asp-for="Name" class="form-label">Name Category</label>
                    <input asp-for="Name" type="text" class="form-control border-0 shadow">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                    <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" >
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-3">
                        <button type="submit" class="btn btn-primary">Add Category</button>
                    </div>
                    <div class="col-3">
                        <a  asp-action="Index" type="button" class="btn btn-dark">Back To List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}